{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
  },
  "include": [
    "./src/**/*.ts",
    "src/types/express/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
